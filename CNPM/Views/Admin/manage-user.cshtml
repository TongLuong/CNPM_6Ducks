  Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link rel="stylesheet" href="/Admin/src/header-footer.css" />
  <link rel="stylesheet" href="/Admin/src/global.css" />
  <link rel="stylesheet" href="/Admin/src/main.css" />
  <link rel="stylesheet" href="/Admin/src/admin-manage-user.css" />
    <link rel="stylesheet" href="/Admin/font-awesome/css/font-awesome.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/Admin/js/main.js"></script>
