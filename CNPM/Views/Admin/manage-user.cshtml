@{
  Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link rel="stylesheet" href="/Admin/src/header-footer.css" />
  <link rel="stylesheet" href="/Admin/src/global.css" />
  <link rel="stylesheet" href="/Admin/src/main.css" />
  <link rel="stylesheet" href="/Admin/src/admin-manage-user.css" />
    <link rel="stylesheet" href="/Admin/font-awesome/css/font-awesome.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/Admin/js/main.js"></script>
    <script src="/Admin/js/header-footer.js"></script>
    <script src="/Admin/js/admin-manage-user.js"></script>
    <script src="/Admin/js/href.js"></script>
</head>

<body>
  <div class="content">
    <div class="information wrapper">
      <div class="user-info">
        <div>
          <img
            src="https://images.unsplash.com/photo-1701207859644-59994f41c62e?q=80&w=1978&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
            alt="" class="avatar" />
          <div>
            <p class="username">Admin</p>
            <p class="department">Quản trị viên</p>
          </div>
        </div>
      </div>
      <div class="group-btn">
        <button type="button" class="edit-info">
          Chỉnh sửa thông tin cá nhân
        </button>
      </div>
    </div>
    <div class="action-bar wrapper">
      <div class="btn edit-info">
        <p>Thông tin cá nhân</p>
      </div>
      <div class="btn manage-user">
        <p>Quản lí người dùng</p>
      </div>
      <div class="btn manage-printer">
        <p>Quản lí máy in</p>
      </div>
      <div class="btn manage-system">
        <p>Cài đặt hệ thống</p>
      </div>
      <div class="btn notification">
        <p>Thông báo</p>
      </div>
    </div>
  </div>
  <div class="content action">
    <div class="manageuser wrapper">
      <h1>Quản lí người dùng</h1>
      <div class="main">
        <div class="search-user">
          <form action="">
            <label for="search-user">Tìm kiếm người dùng</label>
            <input type="text" name="search-user" id="search-user" placeholder="Nhập ở đây..." />
          </form>
          <div class="btn-group">
            <button type="button" id="confirm-search">Tìm kiếm</button>
          </div>
        </div>
        <div class="filter-table">
          <div class="field-bar">
            <div class="field">STT</div>
            <div class="field">Tên người dùng</div>
            <div class="field">MSSV/CB</div>
            <div class="field">Khoa/ngành</div>
            <div class="field">Số trang còn lại</div>
            <div class="field">Trạng thái hoạt động</div>
          </div>
          <div class="filter-record"></div>
          <div style="text-align: center;" id="mark-done-wrapper">
              <button id="toggle-edit">Chỉnh sửa quyền truy cập người dùng</button>
              <button style="display: none" id="done">Hoàn thành chỉnh sửa</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
